{
  "id": "wifipool",
  "name": { "en": "WiFi Pool Sensor" },
  "class": "sensor",
  "capabilities": [
    "measure_redox",
    "measure_ph",
    "measure_flow",
	"measure_temperature",
    "alarm_health"
  ],
  "connectivity": ["cloud"],
  "pair": [
    { "id": "start" }
  ],
  "images": {
    "small": "/drivers/wifipool/assets/images/small.jpg",
    "large": "/drivers/wifipool/assets/images/large.jpg",
    "xlarge": "/drivers/wifipool/assets/images/xlarge.jpg"
  ],
  "platforms": ["local", "cloud"],
  "settings": [
    {
      "id": "poll_interval",
      "type": "number",
      "label": { "en": "Polling interval" },
      "hint":  { "en": "How often to refresh values (in seconds)." },
      "value": 60,
      "attr": {
        "min": 10,
        "max": 3600,
        "step": 5
      },
      "units": { "en": "seconds" }
    }
  ]
}
