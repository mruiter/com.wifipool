{
  "id": "wifipool",
  "name": {
    "en": "WiFi Pool Sensor"
  },
  "class": "sensor",
  "capabilities": [
	"measure_temperature",
    "measure_redox",
    "measure_ph",
    "measure_flow",
    "alarm_health"
  ],
  "connectivity": [
    "cloud"
  ],
  "pair": [
    {
      "id": "list_devices"
    }
  ],
  "images": {
    "small": "/drivers/wifipool/assets/images/small.jpg",
    "large": "/drivers/wifipool/assets/images/large.jpg",
    "xlarge": "/drivers/wifipool/assets/images/xlarge.jpg"
  },
  "platforms": [
    "local",
    "cloud"
  ],
  "settings": [
    {
      "id": "poll_interval",
      "type": "number",
      "label": {
        "en": "Polling interval (seconds)"
      },
      "hint": {
        "en": "How often to poll WiFiPool for new sensor values. Default: 60 seconds."
      },
      "min": 15,
      "max": 600,
      "step": 5,
      "value": 60
    }
  ]
}